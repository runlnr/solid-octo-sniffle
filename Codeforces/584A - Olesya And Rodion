#include <bits/stdc++.h>
#define ss second
#define ff first
#define endl "\n"
#define sp ' '
#define pback push_back

using namespace std;
typedef long long ll;   typedef string str;
//chetmeorroiroiorr
ll mul(int n) {
    ll ok = 1;
    for(int i = 1; i < n; i++) ok *= 10;
    return ok;
}
void solve() {
    int n, t;   cin >> n >> t;
    if(t == 10 && n == 1) cout << -1 << endl;
    else {
        cout << t;
        if(t != 10) for(int i = 1; i < n; i++) cout << 0;
        else for(int i = 2; i < n; i++) cout << 0;
    }
 }
int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);     cout.tie(0);
    solve();
    return 0;
}

