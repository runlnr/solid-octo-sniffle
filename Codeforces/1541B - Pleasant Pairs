#include <bits/stdc++.h>
#define ss second
#define ff first
#define endl "\n"
#define sp ' '
#define pback push_back

using namespace std;
typedef long long ll;   typedef string str;
//chetmeorroiroiorr
bool comp(pair<int, int> a, pair<int, int> b) {
    return a > b;
}
void solve(int n) {
    vector<pair<int, int>> vc;
    int ans = 0;

    for(int i = 1; i <= n; i++) {
        int p;  cin >> p;
        vc.pback(make_pair(p, i));
    }
    sort(vc.begin(), vc.end());

    for(int i = 0; i < n; i++)
    for(int j = i+1; j < n; j++) {
        ll prod = vc[i].ff*vc[j].ff;
        if(prod > (2*n)) break;
        if(prod == (vc[i].ss + vc[j].ss)) ans++;
    }

    cout << ans << endl;
}
int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);     cout.tie(0);

    int t;	cin >> t;
    while(t--) {
    	int n;	cin >> n;
    	solve(n);
    }
    return 0;
}

